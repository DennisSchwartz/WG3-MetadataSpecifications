{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title" : "DATS publication schema",
  "description" : "A (digital) document made available by a publisher.",
  "type" : "object",
  "properties" : {
    "identifierInfo": {
      "description": "Primary identifiers for the publication.",
      "type": "array",
      "items": {
        "$ref": "identifier_info_schema.json#"
      }
    },
    "alternateIdentifierInfo": {
      "description": "Alternate identifiers for the publication.",
      "type": "array",
      "items": {
        "$ref": "alternate_identifier_info_schema.json#"
      }
    },
    "relatedIdentifierInfo": {
      "description": "Related identifiers for the publication.",
      "type": "array",
      "items": {
        "$ref": "related_identifier_info_schema.json#"
      }
    },
    "title": {
      "description": "Publication type, ideally delegated to an external vocabulary/resource.",
      "type" :  "string"
    },
    "type" : {
      "description": "type of publication type, delegated to an external vocabulary/resource",
      "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "string",
            "format" : "uri"
          }
        ]
    },
    "date" : {
      "description": "a property to specify the date of the publication",
      "type" : "string",
      "format": "date-time"
    },
    "authors" : {
      "description": "a property to specify the person(s) responsible for the publication",
      "type" : "array",
      "items" : {
        "oneOf": [
          {"$ref" : "person_schema.json#"},
          {"$ref" : "organization_schema.json#"}
        ]
      },
      "minItems" : 1
    },
    "acknowledges" : {
      "description": "a property to specify the grant(s) which funded and supported the work reported by the publication",
      "type" : "array",
      "items" : {
        "$ref" : "grant_schema.json#"
      }
    },
    "cites" : {
      "description": "a property to specify a reference to a dataset or publication",
      "type" : "array",
      "items" : {
        "oneOf": [
          {"$ref" : "dataset_schema.json#"},
          {"$ref" : "publication_schema.json#"}
        ]
      }
    },
    "licenses" : {
      "description": "a property used to specify to the terms of use of the publication",
      "type" : "array",
      "items" : {
        "$ref" : "license_schema.json#"
      }
    }
  },
  "required": ["title","date"]
}
