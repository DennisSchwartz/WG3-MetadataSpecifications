{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "DDI disease schema",
    "description": "JSON-schema representing a disease in the DDI model",
    "type": "object",
    "properties": {
         "identifierInfo": {
            "type": "array",
            "items": {
                "$ref": "identifier_info_schema.json#"
            }
        },
        "name": {
            "description": "a property to specify the name of the disease",
            "type" :  "string"
        }
    },
    "required" : ["name"]
}